# Environment Variables for Validator Pro Telegram Bot

# Required - Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_CHAT_ID=your_admin_chat_id_here

# Required - BlockBee API Configuration
BLOCKBEE_API_KEY=your_blockbee_api_key_here

# Database Configuration (optional - defaults to SQLite)
DATABASE_URL=postgresql://username:password@localhost:5432/validator_db

# SMTP Email Testing Configuration (optional - enables advanced email validation)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true
SMTP_TEST_EMAIL=test@validator.com
SMTP_HELO_DOMAIN=validator.com

# Webhook Configuration (optional - auto-configured for Replit)
WEBHOOK_BASE_URL=https://your-domain.com

# Subscription Configuration (optional - has defaults)
SUBSCRIPTION_PRICE_USD=9.99
TRIAL_VALIDATION_LIMIT=1000
SUBSCRIPTION_DURATION_DAYS=30

# Validation Performance Settings (optional - has defaults)
MAX_CONCURRENT_VALIDATIONS=50
VALIDATION_TIMEOUT=10
MAX_FILE_SIZE_MB=10
RATE_LIMIT_PER_MINUTE=120

# Phone Validation Settings (optional - has defaults)
DEFAULT_PHONE_REGION=US
PHONE_VALIDATION_TIMEOUT=5